<h1>Plants#index</h1>
<ul>
  <% @plants.each do |plant| %>
    <li>
     <p><%= link_to plant.name, plant_path(plant) %> Owner: <%= plant.user.email %></p>
    </li>
  <% end %>
</ul>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
